# PingThing Environment Configuration
# Copy this file to .env.local and customize the values

# Comma-separated list of hosts to monitor
# Default: 8.8.8.8,google.com,github.com
PINGTHING_HOSTS=8.8.8.8,google.com,github.com,cloudflare.com

# Ping interval in seconds (10-3600)
# Default: 60
PINGTHING_INTERVAL=5

# Ping timeout in milliseconds (1000-30000)
# Default: 5000
PINGTHING_TIMEOUT=5000

# Number of ping retries (1-10)
# Default: 3
PINGTHING_RETRIES=3

# API server port (1024-65535)
# Default: 3000
PINGTHING_API_PORT=3000

# SQLite database path
# Default: ./pingthing.db
PINGTHING_DB_PATH=./pingthing.db

# Node environment
NODE_ENV=development